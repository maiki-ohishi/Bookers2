<%= render '/header.html.erb' %>

<div class="container">
	<% if flash[:notice] %>
		<p id="notice"><%= flash[:notice] %></p>
	<% end %>
	<div class="row">
		<%= render '/userinfo.html.erb' %>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opiinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<% if @user.profile_image.present? %>
								<td><%= link_to attachment_image_tag(@user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "attachment user profile_image fallback"), user_path(@user.id) %></td>
							<% else %>
									<td><%= link_to image_tag('noimage.gif', :height => "40", class: "attachment user profile_image fallback"), user_path(@user.id) %></td>
							<% end %>
							<td><%= link_to "#{book.title}", book_path(book.id), class: "book_#{book.id}" %></td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<%= render '/footer.html.erb' %>
