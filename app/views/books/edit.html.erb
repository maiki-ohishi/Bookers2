<%= render '/header.html.erb' %>

<div class="container">
	<% if flash[:notice] %>
		<p id="notice"><%= flash[:notice] %></p>
	<% end %>
	<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1> Editing Book</h1>
		<% if @book.errors.any? %>
			<p><%= @book.errors.count %> errors prohibited this obj from being saved:</p>
			<ul>
				<% @book.errors.full_messages.each do |message| %>
					<li> <%= message %></li>
				<% end %>
			</ul>
		<% end %>
		<%= form_for(@book, url: book_path(@book.id), :html => {:class => "edit_book", :id => "edit_book_#{@book.id}"}) do |f| %>
			<div class="field row">
				<label for="book_title">Title</label>
				<%= f.text_field :title, placeholder:"title", class: "col-xs-12 book_title", id: "book_title", name: "book[title]" %>
			</div>
			<div class="field row">
				<label for="book_opinion">Opinion</label>
				<%= f.text_area :body, placeholder:"Opinion", class: "col-xs-12 book_body", id: "book_body", name: "book[body]" %>
			</div>
			<div class="actions row">
				<%= f.submit "Update Book", class: "btn btn-primary col-xs-12", name: "commit" %>
			</div>
		<% end %>
		<%= link_to "Show", book_path(@book.id), class: "book_#{@book.id}" %> | <%= link_to "Back", books_path %>
	</div>
	<div class="col-md-3"></div>
</div>

<%= render '/footer.html.erb' %>